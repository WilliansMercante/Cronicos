@model APS.Cronicos.UI.Web.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_TemplateSeguranca.cshtml";
}

<div class="row" id="dvLogin">
    <div class="col-md-12">
        <div class="login-container">
            <div class="center">
                <h3>
                    <img src="~/assets/images/Logo_APS_Branco.png" alt="">
                    <span class="white" id="nmSistema"></span>
                </h3>
            </div>

            <div class="space-6"></div>

            <div class="position-relative">

                @using (Html.BeginForm("Index", "Autenticar", FormMethod.Post, new { @class = "form", area = "Login", @id = "frmLogin" }))
                {
                    @Html.AntiForgeryToken()

                    <div id="login-box" class="login-box visible widget-box no-border">
                        <div class="widget-body">
                            <div class="widget-main">
                                <h4 class="header blue lighter bigger">
                                    <i class="ace-icon fa fa-key blue"></i>
                                    Autenticação
                                </h4>

                                <div class="space-6"></div>

                                <fieldset>
                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(p => p.Cpf, new { @class = "form-control", placeholder = "Informe o número do CPF", @required = "required" })
                                            <i class="ace-icon fa fa-user"></i>
                                        </span>
                                    </label>

                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.PasswordFor(p => p.Senha, new { @class = "form-control", placeholder = "Informe a senha", @required = "required" })
                                            <i class="ace-icon fa fa-lock"></i>
                                        </span>
                                    </label>
                                    <div class="space"></div>

                                    <div class="clearfix jGravity">

                                        <button type="submit" class="width-45 pull-right btn btn-sm btn-primary jGravity" id="btnLogin">
                                            <i class="ace-icon fa fa-key"></i>
                                            <span class="bigger-110">Conecte-se</span>
                                        </button>
                                    </div>

                                    <div class="space-4"></div>
                                </fieldset>


                            </div><!-- /.widget-main -->

                            <div class="toolbar clearfix">
                                <div></div>
                                <div>
                                    @Html.ActionLink("Esqueci minha Senha", "Index", "TrocarSenha", null, htmlAttributes: new { area = "Login", @class = "forgot-password-link" })
                                </div>
                            </div>
                        </div><!-- /.widget-body -->
                    </div><!-- /.login-box -->


                    <div id="forgot-box" class="forgot-box widget-box no-border">
                        <div class="widget-body">
                            <div class="widget-main">
                                <h4 class="header blue lighter bigger">
                                    <i class="ace-icon fa fa-key"></i>
                                    Autenticação
                                </h4>

                                <div class="space-6"></div>
                                <p>
                                    Selecione a unidade
                                </p>

                                <fieldset>

                                    <label class="block clearfix" style="display:none">
                                        <span class="block input-icon input-icon-right">
                                            @Html.DropDownListFor(p => p.IdUnidade, Model.ListarUnidades, "-- unidade --", new { @class = "form-control" })
                                        </span>
                                    </label>

                                </fieldset>
                                <div class="clearfix jGravity">

                                    <button type="submit" class="width-35 pull-right btn btn-sm btn-primary jGravity">
                                        <i class="ace-icon fa fa-key"></i>
                                        <span class="bigger-110">Login</span>
                                    </button>
                                </div>
                            </div><!-- /.widget-main -->


                        </div><!-- /.widget-body -->
                    </div>
                }

            </div><!-- /.position-relative -->
        </div>
    </div><!-- /.col -->
</div><!-- /.row -->
@section JS{
    <script type="text/javascript" src="~/assets/js/login/index.js"></script>
}
