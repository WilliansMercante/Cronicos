@model APS.Cronicos.UI.Web.ViewModels.PrimeiroAcessoViewModel

@{
    ViewData["Title"] = "Primeiro Acesso";
    Layout = "~/Views/Shared/_TemplateSeguranca.cshtml";
}

<style type="text/css">
    .cpf {
        font-size: 17px;
    }
</style>

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="login-container">
            <div class="center">
                <h3>
                    <img src="~/assets/images/Logo_APS_Branco.png" alt="">
                    <span class="white" id="nmSistema"></span>
                </h3>
            </div>
            <div class="space-6"></div>
            <div class="position-relative">
                <div id="signup-box" class="signup-box widget-box no-border visible">
                    <div class="widget-body">
                        <div class="widget-main">
                            <h4 class="header green lighter bigger">
                                <i class="ace-icon fa fa-users blue"></i>
                                Primeiro Acesso
                            </h4>

                            <div class="space-6"></div>
                            <p> Para sua segurança, altere sua senha </p>

                            @using (Html.BeginForm("Index", "PrimeiroAcesso", null, FormMethod.Post, true, new { @class = "form", id = "frmPrimeiroAcesso" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(p => p.Id)
                                @Html.HiddenFor(p => p.Token)
                                @Html.HiddenFor(p => p.Cpf)

                                <fieldset>
                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.LabelFor(p => p.Cpf, Model.Cpf, new { @class = "form-control cpf" })
                                            <i class="ace-icon fa fa-credit-card-alt"></i>
                                        </span>
                                    </label>

                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(p => p.NmUsuario, new { @class = "form-control", placeholder = "Informe o nome do usuário", required = "required" })
                                            <i class="ace-icon fa fa-user"></i>
                                        </span>
                                    </label>

                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(p => p.EmailPrincipal, new { @class = "form-control", placeholder = "Informe o e-mail principal", required = "required", type = "email" })
                                            <i class="ace-icon fa fa-envelope-o"></i>
                                        </span>
                                    </label>

                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(p => p.EmailSecundario, new { @class = "form-control", placeholder = "Informe o e-mail secundário", type = "email" })
                                            <i class="ace-icon fa fa-envelope-o"></i>
                                        </span>
                                    </label>

                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.PasswordFor(p => p.Senha, new { @class = "form-control", placeholder = "Informe uma nova senha", required = "required" })
                                            <i class="ace-icon fa fa-key"></i>
                                        </span>
                                    </label>

                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.PasswordFor(p => p.SenhaConfirmada, new { @class = "form-control", placeholder = "Confirme a nova senha", required = "required" })
                                            <i class="ace-icon fa fa-key"></i>
                                        </span>
                                    </label>

                                    <div class="space-24"></div>

                                    <div class="clearfix">
                                        <button type="submit" class="width-45 pull-right btn btn-sm btn-success">
                                            <i class="ace-icon fa fa-save"></i>
                                            <span class="bigger-110">Alterar Senha</span>
                                        </button>
                                    </div>
                                </fieldset>
                            }
                        </div>

                        <div class="toolbar center">
                            @Html.ActionLink("Voltar ao Login", "Index", "Autenticar", new { area = "Login" }, new { @class = "back-to-login-link" })
                        </div>
                    </div><!-- /.widget-body -->
                </div><!-- /.signup-box -->
            </div><!-- /.position-relative -->
        </div>
    </div><!-- /.col -->
</div><!-- /.row -->