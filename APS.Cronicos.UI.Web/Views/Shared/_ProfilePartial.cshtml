@model APS.Cronicos.UI.Web.ViewModels.ProfileViewModel

@using (Html.BeginForm("DadosCadastrais", "Profile", new { areas = "", id = "frmProfile" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p => p.Id)

    <div clas="row clearfix">
        <div class="col-lg-12">
            <div class="row clearfix">
                <div class="col-md-3">
                    <label class="control-label font-bold">Nome</label>
                </div>
                <div class="col-md-9">
                    <div class="form-group">
                        @Html.TextBoxFor(p => p.NmUsuario, new { @class = "form-control", @readonly = "readonly", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div clas="row clearfix">
        <div class="col-lg-12">
            <div class="row clearfix">
                <div class="col-md-3">
                    <label class="control-label font-bold">CPF</label>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.TextBoxFor(p => p.Cpf, new { @class = "form-control", @readonly = "readonly", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div clas="row clearfix">
        <div class="col-lg-12">
            <div class="row clearfix">
                <div class="col-md-3">
                    <label class="control-label font-bold">E-mail Principal</label> <span class="text-danger">*</span>
                </div>
                <div class="col-md-9">
                    <div class="form-group">
                        @Html.TextBoxFor(p => p.EmailPrincipal, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div clas="row clearfix">
        <div class="col-lg-12">
            <div class="row clearfix">
                <div class="col-md-3">
                    <label class="control-label font-bold">E-mail Secundário</label>
                </div>
                <div class="col-md-9">
                    <div class="form-group">
                        @Html.TextBoxFor(p => p.EmailSecundario, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="pull-right">
                <button type="submit" class="btn btn-success" id="btnSalvar">
                    <i class="glyphicon glyphicon-floppy-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>

    <div class="space-8"></div>

}
<div class="modal-footer">
    <span class="text-danger pull-right">(*) Campos obrigatórios</span>
</div>