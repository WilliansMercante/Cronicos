@model APS.Cronicos.UI.Web.ViewModels.MensagemViewModel

@using (Html.BeginForm("Mensagem", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(p => p.Id)

    <div clas="row clearfix">
        <div class="col-lg-12">
            <div class="row clearfix">
                <div class="col-md-12">
                    <div class="form-group">
                        @(Html.Raw(Model.Mensagem))
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="pull-left">
                <button type="submit" class="btn btn-success btn-round hidden-sm-down float-right" id="btnSalvar">
                    <i class="glyphicon glyphicon-ok"></i> OK
                </button>
            </div>
        </div>
    </div>
}