@model APS.Cronicos.UI.Web.ViewModels.TrocarSenhaViewModel

@{
    Layout = "~/Views/Shared/_TemplateSeguranca.cshtml";
}

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="login-container">
            <div class="center">
                <h3>
                    <img src="~/assets/images/Logo_APS_Branco.png" alt="">
                    <span class="white" id="nmSistema"></span>
                </h3>
            </div>

            <div class="space-6"></div>

            <div class="position-relative">
                <div id="login-box" class="forgot-box visible widget-box no-border">
                    <div class="widget-body">
                        <div class="widget-main">
                            <h4 class="header red lighter bigger">
                                <i class="ace-icon fa fa-key"></i>
                                Esqueci minha senha <br />
                            </h4>

                            <div class="space-6"></div>
                            <p class="text-center">
                                Informe seu CPF para receber as instruções no e-mail cadastrado
                            </p>

                            @using (Html.BeginForm("Index", "TrocarSenha", FormMethod.Post, new { @class = "form", area = "Login" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()

                                <fieldset>
                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.TextBoxFor(p => p.Cpf, new { @class = "form-control", placeholder = "Informe o número do CPF", @required = "required" })
                                            <i class="ace-icon fa fa-envelope"></i>
                                        </span>
                                    </label>

                                    <div class="clearfix">
                                        <button type="submit" class="width-35 pull-right btn btn-sm btn-danger">
                                            <i class="ace-icon fa fa-envelope-o"></i>
                                            <span class="bigger-110">Enviar</span>
                                        </button>
                                    </div>
                                </fieldset>
                            }
                        </div><!-- /.widget-main -->

                        <div class="toolbar center">
                            @Html.ActionLink("Voltar ao Login", "Index", "Autenticar", null, new { area = "Login", @class = "back-to-login-link" })
                        </div>
                    </div><!-- /.widget-body -->

                </div><!-- /.login-box -->

            </div><!-- /.position-relative -->
        </div>
    </div><!-- /.col -->
</div><!-- /.row -->