@model APS.Cronicos.UI.Web.ViewModels.NovaSenhaViewModel

@{
    ViewData["Title"] = "Nova Senha";
    Layout = "~/Views/Shared/_TemplateSeguranca.cshtml";
}

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="login-container">
            <div class="center">
                <h3>
                    <img src="~/assets/images/Logo_APS_Branco.png" alt="">                    
                    <span class="white" id="nmSistema"></span>
                </h3>
            </div>
            <div class="space-6"></div>
            <div class="position-relative">
                <div id="signup-box" class="signup-box widget-box no-border visible">
                    <div class="widget-body">
                        <div class="widget-main">
                            <h4 class="header green lighter bigger">
                                <i class="ace-icon fa fa-users blue"></i>
                                Nova Senha
                            </h4>

                            <div class="space-6"></div>
                            <p> Você está a apenas um passo de gerar sua nova senha </p>

                            @using (Html.BeginForm("SalvarSenha", "TrocarSenha", FormMethod.Post, new { @class = "form", area = "Login" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(p => p.Cpf)
                                @Html.HiddenFor(p => p.Token)

                                @Html.ValidationSummary()

                                <fieldset>
                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.PasswordFor(p => p.NovaSenha, new { @class = "form-control", placeholder = "Informe a nova senha", @required = "required" })
                                            <i class="ace-icon fa fa-key"></i>
                                        </span>
                                    </label>

                                    <label class="block clearfix">
                                        <span class="block input-icon input-icon-right">
                                            @Html.PasswordFor(p => p.NovaSenhaConfirmada, new { @class = "form-control", placeholder = "Confirme a nova senha", @required = "required" })
                                            <i class="ace-icon fa fa-key"></i>
                                        </span>
                                    </label>

                                    <div class="space-24"></div>

                                    <div class="clearfix">
                                        <button type="submit" class="width-45 pull-right btn btn-sm btn-success">
                                            <i class="ace-icon fa fa-save"></i>
                                            <span class="bigger-110">Alterar Senha</span>
                                        </button>
                                    </div>
                                </fieldset>
                            }
                        </div>

                        <div class="toolbar center">
                            @Html.ActionLink("Voltar ao Login", "Index", "Autenticar", new { area = "Login" }, new { @class = "back-to-login-link" })
                        </div>
                    </div><!-- /.widget-body -->
                </div><!-- /.signup-box -->
            </div><!-- /.position-relative -->
        </div>
    </div><!-- /.col -->
</div><!-- /.row -->