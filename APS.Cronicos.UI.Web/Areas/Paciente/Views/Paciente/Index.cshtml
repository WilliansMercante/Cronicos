@model APS.Cronicos.UI.Web.Areas.Paciente.ViewModels.Paciente.IndexViewModel

@{
    Layout = "~/Views/Shared/_Template.cshtml";
    ViewData["Title"] = "Agenda";
}

@section CSS
    {
    <link rel="stylesheet" href="~/assets/plugins/jquery-datatable/dataTables.bootstrap4.min.css">
    <link type="text/css" rel="stylesheet" href="~/assets/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
    <link type="text/css" rel="stylesheet" href="~/assets/css/select2.min.css" />
    <link type="text/css" rel="stylesheet" href="~/assets/css/custom/paciente/index/index.css" />
}

    <section class="content">
        <div class="block-header">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home"><i class="zmdi zmdi-home"></i> Home</a></li>
                    <li class="breadcrumb-item"> Paciente</li>
                    <li class="breadcrumb-item"> Cadastro</li>
                </ul>
            </div>
        </div>
        <div class="container-fluid">
            <div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    <strong>Paciente</strong>
                                    <label class="botaoVoltar">
                                        <a class="btn btn-sm btn-primary btn-icon voltar btn-round" href="/Home/Index" title="Voltar">
                                            <i class="glyphicon glyphicon-circle-arrow-left"></i>
                                        </a>
                                    </label>
                                </h2>
                                <div class="col-sm-6" id="divRecarregar" style="display:none">
                                    <a class="btn btn-sm btn-success" id="btnRecarregar" title="Novo Paciente - Recarregar" data-toggle="tooltip" data-placement="right" data-html="true" onclick="document.location.reload(true);"><i id="iBtnRecarregar" class="ace-icon fa fa-refresh"></i>Novo Paciente</a>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix" id="divConteudo">
                            <div class="col-sm-12">
                                <div class="tabbable tabs-left">
                                    <ul class="nav nav-tabs" id="myTab3">
                                        <li class="active" id="liPaciente">
                                            <a data-toggle="tab" href="#tabPaciente">
                                                <i class="blue ace-icon fa fa-user bigger-110"></i>
                                                Paciente
                                            </a>
                                        </li>

                                        <li id="liAtendimento">
                                            <a data-toggle="tab" href="#tabAtendimento">
                                                <i class="green ace-icon glyphicon glyphicon-list"></i>
                                                Atendimentos
                                            </a>
                                        </li>

                                        <li id="liAvaliacao">
                                            <a data-toggle="tab" href="#tabAvaliacaoRisco">
                                                <i class="red ace-icon fa fa-exclamation-triangle bigger-110"></i>
                                                Avaliações de Risco
                                            </a>
                                        </li>
                                    </ul>

                                    <div class="tab-content">
                                        <div id="tabPaciente" class="tab-pane in active">
                                            @{
                                            await Html.RenderPartialAsync("_cadastro.cshtml", @Model.Paciente);
                                        }
                                    </div>

                                    <div id="tabAtendimento" class="tab-pane">
                                        @{
                                            await Html.RenderPartialAsync(@"..\..\..\Atendimento\Views\Atendimento\_atendimento.cshtml", @Model.Atendimento);
                                        }
                                    </div>

                                    <div id="tabAvaliacaoRisco" class="tab-pane">
                                        @{
                                            await Html.RenderPartialAsync(@"..\..\..\AvaliacaoRisco\Views\AvaliacaoRisco\_avaliacaoRisco.cshtml", @Model.AvaliacaoRisco);
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
@section JS
    {
    <script src="~/assets/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/js/jquery.dataTables.bootstrap.min.js"></script>
    <script src="~/assets/js/dataTables.buttons.min.js"></script>
    <script src="~/assets/js/moment.min.js"></script>
    <script src="~/assets/js/jquery.maskedinput.min.js"></script>
    <script src="~/assets/js/select2.min.js"></script>
    <script src="~/assets/js/utils/validacao/validacaoCns.js"></script>
    <script src="~/assets/js/utils/formatacao/formatacaoCPF.js"></script>
    <script src="~/assets/js/custom/atendimento/atendimento.js"></script>
    <script src="~/assets/js/custom/avaliacao/avaliacao.js"></script>
    <script src="~/assets/js/custom/paciente/index/index.js"></script>

    }
