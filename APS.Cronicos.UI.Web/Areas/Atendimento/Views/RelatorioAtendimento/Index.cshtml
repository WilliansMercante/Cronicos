@model APS.Cronicos.UI.Web.Areas.Atendimento.ViewModels.RelatorioAtendimento.IndexViewModel

@{
    Layout = "~/Views/Shared/_Template.cshtml";
    ViewData["Title"] = "Relatório de Atendimentos";
}

@section CSS
    {
    <link type="text/css" rel="stylesheet" href="~/assets/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
    <link type="text/css" rel="stylesheet" href="~/assets/css/select2.min.css" />
    <link type="text/css" rel="stylesheet" href="~/assets/css/custom/atendimento/relatorioAtendimento/index.css" />
}

    <section class="content">
        <div class="block-header">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Home/Index"><i class="zmdi zmdi-home"></i> Home</a></li>
                    <li class="breadcrumb-item"> Relatórios</li>
                    <li class="breadcrumb-item"> Atendimentos</li>
                </ul>
            </div>
        </div>
        <div class="container-fluid">
            <div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    <strong>Relatório de Atendimentos</strong>
                                    <label class="botaoVoltar">
                                        <a class="btn btn-sm btn-primary btn-icon voltar btn-round" href="/Home/Index" title="Voltar">
                                            <i class="glyphicon glyphicon-circle-arrow-left"></i>
                                        </a>
                                    </label>
                                </h2>
                            </div>
                            <div class="body">
                                <div>
                                    <div id="divDadosUnidade">
                                        <fieldset class="scheduler-border">
                                            <legend class="scheduler-border">Dados do Atendimento</legend>
                                            <div class="row clearfix">
                                                <div class="col-sm-12 col-md-12 col-lg-12" style="margin-top: 8px; ">
                                                    <div class="col-sm-1">
                                                        <label>Pacientes sem Atendimento?</label>
                                                        @Html.CheckBoxFor(p => p.FlPacientesSemAtendimento)
                                                    </div>
                                                    <div id="divAtendimento">
                                                        <div class="col-sm-2">
                                                            <label>Cns Paciente:</label>
                                                            @Html.TextBoxFor(p => p.Paciente.Cns, new { @class = "form-control" })
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <label>Tipo de Atendimento:</label>
                                                            @Html.DropDownListFor(p => p.TipoAtendimento.Id, Model.TiposAtendimento, " ------  Selecione  ------ ", new { @class = "form-control" })
                                                        </div>
                                                        <div class="col-sm-2">
                                                            <label>Data Inicio:</label>
                                                            @Html.TextBoxFor(p => p.DtInicioAtendimento,"{0:yyyy-MM-dd}", new {  @class = "form-control", type = "date", max = DateTime.Now.ToString("yyyy-MM-dd")})
                                                        </div>
                                                        <div class="col-sm-2">
                                                            <label>Data Fim:</label>
                                                            @Html.TextBoxFor(p => p.DtFimAtendimento,"{0:yyyy-MM-dd}", new {  @class = "form-control", type = "date", max = DateTime.Now.ToString("yyyy-MM-dd")})
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <input type="button" id="gerarRelatorioAtendimentos" class="btn btn-success" value="Gerar PDF">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @section JS
    {
    <script src="~/assets/js/moment.min.js"></script>
    <script src="~/assets/js/jquery.maskedinput.min.js"></script>
    <script src="~/assets/js/select2.min.js"></script>
    <script src="~/assets/js/utils/validacao/validacaoCns.js"></script>
    <script src="~/assets/js/utils/formatacao/formatacaoCPF.js"></script>
    <script src="~/assets/js/custom/atendimento/relatorioAtendimento/index.js"></script>
}
